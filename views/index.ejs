<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LaughLab Dashboard</title>
</head>
<body>
<h1>Welcome to LaughLab</h1>

<div style="text-align: center; margin-top: 50px;">
    <form action="/create-chat" method="POST" style="display: inline-block;">
        <label for="username">Enter Username:</label><br>
        <input type="text" id="username" name="username" placeholder="Enter username" required><br><br>
        <button type="submit">Create Chat Session</button>
    </form>
</div>

<h2 style="text-align: center; margin-top: 30px;">Your Previous Chats</h2>

<% if (chatSessions && chatSessions.length > 0) { %>
    <ul style="list-style-type: none; text-align: center;">
        <% chatSessions.forEach(session => { %>
            <li>
                <a href="/chat/<%= session._id %>">
                    Chat with <%= session.participants.find(p => p._id.toString() !== user._id.toString()).username %>
                </a>
            </li>
        <% }); %>
    </ul>
<% } else { %>
    <p style="text-align: center;">You don't have any chat sessions yet.</p>
<% } %>

</body>
</html>
